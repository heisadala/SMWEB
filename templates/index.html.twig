{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block icon %}{{ icon }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block header %}
    <div class='container-fluid sm-body-header-container' >
        <header class='row'>
            <div class='col m-2'>
                <img class='img-fluid sm-body-header-logo'
                    src="{{ server_base }}/images/logo/Seestern.png">
            </div>
            <div class='col align-self-center text-center'>
                {% if header_title is defined and header_title != '' %}
                    <h1>{% block header_title %} {{ header_title }} {% endblock %}</h1>
                {% endif %}
                {% if header_image is defined and header_image != '' %}
                    {% set title = header_image|split('.') %}
                    <img class='img-fluid'
                        src="{{ server_base }}/images/icon/header/{{ header_image }}" 
                        alt={{ title[0] }} 
                        title={{ title[0] }} 
                    >
                {% endif %}
            </div>

            <div class='col m-2 sm-body-header-flag'>
                {% if username is defined and username != '' %}
                    <button class="btn " data-bs-toggle="dropdown" type="button">
                        <img class="rounded-circle" src="{{ server_base }}/images/icon/account_48.png"
                            alt={{ username }}
                            title={{ username }}
                        >
                    </button>
                    <ul class="dropdown-menu sm-body-header-account">
                        <li><a class="dropdown-item disabled" >{{ username }}</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="{{ server_base }}/logout">Logout</a></li>
                    </ul>
                {% endif %}

                {# <span><i class="bi bi-person-fill fs-3"></i></span>   #}
                {# <a class="btn btn-primary" href=" " target='_blank'>{{ username }}</a>   #}
                <img class='img-fluid sm-body-header-flag-img rounded-circle'
                    src="{{ server_base }}/images/flag/united_kingdom_circle_96.png">
            </div>
        </header>
    </div>
{% endblock %}

{% block news %} <div> {{ news }} </div> {% endblock %}

{% block navbar %}
    {% if show_navbar is defined and show_navbar == true %}
        {% include ( "#{db|lower}/navbar.html.twig" ) %}
    {% endif %}
{% endblock %}

{% block content %}
    {% if show_table is defined and show_table == true %}
        {% include ( "#{db|lower}/table.html.twig" ) %}
    {% endif %}
    {% if show_gallery is defined and show_gallery == true %}
        {% include ( "#{db|lower}/gallery.html.twig" ) %}
    {% endif %}
    {% if show_form is defined and show_form == 'ADD' %}
        {% include ( "#{db|lower}/add_form.html.twig" ) %}
    {% endif %}
    {% if show_form is defined and show_form == 'DELETE' %}
        {% include ( "#{db|lower}/delete_form.html.twig" ) %}
    {% endif %}
    {% if show_form is defined and show_form == 'ARCHIVE' %}
        {% include ( "#{db|lower}/archive_form.html.twig" ) %}
    {% endif %}
    {% if show_form is defined and show_form == 'UNARCHIVE' %}
        {% include ( "#{db|lower}/unarchive_form.html.twig" ) %}
    {% endif %}
    {% if show_form is defined and show_form == 'EDIT' %}
        {% include ( "#{db|lower}/edit_form.html.twig" ) %}
    {% endif %}
    {% if show_login is defined and show_login == true %}
        {% include ( "security/login.html.twig" ) %}
    {% endif %}
    {% if show_register is defined and show_register == true %}
        {% include ( "registration/register.html.twig" ) %}
    {% endif %}{% endblock %}

{% block footer %}
        <div class='d-flex justify-content-center m-0'>
            <a target="_blank" href="https://icons8.com">Icons by Icons8</a>
        </div>
{% endblock %}

{% block java %}
    {% if inc_java is defined and inc_java == true %}
        {% include ( "#{db|lower}/js.table.html.twig" ) %}
    {% endif %}
{% endblock %}