{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block icon %}{{ icon }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block background %}
    <style> 
        :root {
            --sm-bg: url('{{ server_base }}/images/background/{{ background }}');
        }
    </style>
{% endblock %}

{% block header %}
    <div id='sm-body-header-container' class='container-fluid'>
        <header id='sm-body-header-row-1' class='row'>
            <div id='sm-body-header-row-1-col-1' class='col m-2'>
                <img id='sm-body-header-logo-img' 
                    class='img-fluid'
                    src="{{ server_base }}/images/logo/Seestern.png">
            </div>
            <div id='sm-body-header-title' class='col align-self-center text-center text-white'>
                {% if header_title is defined and header_title != '' %}
                    <h1>{% block header_title %} {{ header_title }} {% endblock %}</h1>
                {% endif %}
                {% if header_image is defined and header_image != '' %}
                        <img src="{{ server_base }}/images/icon/{{ header_image }}.png" 
                            id='sm-body-header-title-img-{{ header_image }}' 
                            alt={{ header_image }} 
                            title={{ header_image }} 
                            width='96' 
                            height='96' 
                            class='img-fluid'>
                {% endif %}
            </div>
            <div id='sm-body-header-flag' class='col m-2'>
                <img id='sm-body-header-flag-img'  
                    class='img-fluid'
                    src="{{ server_base }}/images/flag/united_kingdom_flag.png">
            </div>
        </header>
    </div>
{% endblock %}

{% block news %} {{ news }} {% endblock %}

{% block navbar %}
    {% if show_navbar is defined and show_navbar == true %}
        {% include ( "#{db|lower}/navbar.html.twig" ) %}
    {% endif %}
{% endblock %}

{% block content %}
    {% if show_table is defined and show_table == true %}
        {% include ( "#{db|lower}/table.html.twig" ) %}
    {% endif %}
    {% if show_form is defined and show_form == 'ADD' %}
        {% include ( "#{db|lower}/add_form.html.twig" ) %}
    {% endif %}
    {% if show_form is defined and show_form == 'DELETE' %}
        {% include ( "#{db|lower}/delete_form.html.twig" ) %}
    {% endif %}
    {% if show_form is defined and show_form == 'UPDATE' %}
        {% include ( "#{db|lower}/update_form.html.twig" ) %}
    {% endif %}
{% endblock %}

{% block footer %} {% endblock %}

{% block java %}
    {% if inc_java is defined and inc_java == true %}
        {% include ( "#{db|lower}/js.table.html.twig" ) %}
    {% endif %}
{% endblock %}