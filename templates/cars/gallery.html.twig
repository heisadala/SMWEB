<script src="{{ asset('js/collapse.js') }}"></script>

<div class='container-fluid px-4'>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-6 g-4 mt-2">
        {% for database in databases %}
            <div class="col">
                <div class="card h-100">
                    <img src="{{ server_base }}/images/background/Cars.jpg" 
                        class="card-img mx-auto" alt="Cars"> 
                    <button class="btn btn-link col-button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                        {{ database.brand }}&nbsp;&nbsp;&nbsp;&nbsp;{{ database.plate }}
                    </button>
                    <div class="collapse" id="collapseExample">

                        <div class="card-body"><br>
                        <table class='table table-sm'>
                        <thead>
                            <tr class="table-success"><td>{{ database.model }}</td></tr>
                        </thead>
                        <tbody>
                            <tr class="table-light"><td>MISE EN CIRCULATION</td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td><td>{{ database.registration|date("d-m-Y") }}</td></tr>
                            <tr class="table-danger"><td>CONTROLE TECHNIQUE</td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td><td>{{ database.next_control|date("d-m-Y") }}</td></tr>
                        </tbody>
                        </table>
                            {# <p class="card-title text-truncate"></p>
                            <p class="card-title text-truncate">{{ database.registration|date("d-m-Y") }}</p>
                            <p class="card-title text-truncate">{{ database.nextcontrol|date("d-m-Y") }}</p> #}
                        <a class="btn btn-info" href="{{ server_base }}/DB/CARS/DETAIL/{{ database.plate }}" 
                            target='_blank'>DETAILS</a> 
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>