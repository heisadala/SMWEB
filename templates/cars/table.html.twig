

<div class='row' style='height: 10px;'></div>

<div class='row  justify-content-between'>
    <div class="col-md-1"></div>
    <div class="col-md-10 border rounded bg-iceblue">
        <div class='row row-cols-1'>
            <div class='table-responsive-xl'>
                <table class="table sm-lego-table table-hover mr-4">
                    <thead>
                        <tr>
                            {% for header in facture_table_header_fields %}
                                {% if header.Field |upper == 'ID' or header.Field |upper == 'PLATE'  or header.Field |upper == 'MODEL' %}
                                    <th hidden class='text-truncate'> {{ header.Field |upper }} </th>
                                {% else %}

                                    <th class='text-truncate'> {{ header.Field |upper }} &nbsp;&nbsp;&nbsp;
                                    </th>
                                {% endif %}

                            {% endfor %}
                        </tr>
                    </thead>
                    <tbody>
                            {% set color = 'white' %}
                            {% for row in facture_table_content %}

                                <tr>
                                <td hidden >{{ row.id }} </td>
                                <td>{{ row.date|date("d-m-Y") }} </td>
                                <td> {{ row.garage }} </td>
                                <td> {{ row.city }} </td>
                                <td> {{ row.km }} </td>
                                <td> {{ row.comment }} </td>
                                <td> {{ row.price }} </td>

                                </tr>
                            {% endfor %}
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class='col-md-1'></div>
</div>
