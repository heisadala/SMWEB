{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}
{% block icon %}{{ icon }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" 
        href="{{ asset('css/home/style.css') }}"
        type="text/css" />
{% endblock %}

{% block background %}
<style> 
    :root {
        --sm-bg: url('images/background/{{ background }}' );
    }
</style>
{% endblock %}

{% block header %}
    <div class='container-fluid'>
        <header class='row'>
            <div class='col align-self-center text-center'>
                <img src="images/logo/Seestern.png" width='64' height='64' class='img-fluid'>
            </div>
            <div class='col align-self-center text-center bg-yellow rounded-top'>
                <h1>{% block header_title %} {{ header_title }} {% endblock %}</h1>
            </div>
            <div class='col align-self-center text-center'>
                <img src="images/logo/Seestern.png" width='64' height='64' class='img-fluid'>
            </div>
        </header>
    </div>
{% endblock %}

{% block news %}
    <div class='row  justify-content-between'>
        <div class='d-sm-flex p-2 justify-content-center fs-5' 
            style='background-image: linear-gradient(45deg, var(--sm-green-color) 0%, var(--sm-turquoise-color) 100%);'>
        </div>
    </div>
{% endblock %}

{% block navbar %}
     <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <img class="navbar-brand " src="images/logo/Seestern.png" width="40px" height="48px"></img>
            <button 
                class="navbar-toggler" 
                type="button" 
                data-bs-toggle="collapse" 
                data-bs-target="#navbarSupportedContent" 
                aria-controls="navbarSupportedContent" 
                aria-expanded="false" 
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown"  
                            role="button" aria-expanded="false">
                            <img src="images/icon/Database.png" width='16' height='16' class='img-fluid'>
                            DATABASE</a>
                        <ul class="dropdown-menu bg-iceblue">
                            {% for database in databases %}
                                <li class="dropdown-item text-beige d-flex gap-2 align-items-center">
                                    <a href="{{ database.url }}" class="nav-link" target='_blank'>
                                    <img src="images/icon/{{ database.icon }}" width='16' height='16' class='img-fluid'>
                                    {{ database.name }}</a>
                                </li>
                            {% endfor %}

                        </ul>
                    </li>
                    {% for subdomain in subdomains %}
                        <li class="nav-item">
                            <a href="{{ subdomain.url }}" class="nav-link" target='_blank'>
                            <img src="images/icon/{{ subdomain.icon }}" width='16' height='16' class='img-fluid'>
                            {{ subdomain.name }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

